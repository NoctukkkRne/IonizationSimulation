    <materials>

        <isotope N="1" Z="1" name="H1">
            <atom unit="g/mole" value="1.00782503081372"/>
        </isotope>
        <isotope N="2" Z="1" name="H2">
            <atom unit="g/mole" value="2.01410199966617"/>
        </isotope>
        <element name="Hydrogen">
            <fraction n="0.999885" ref="H1"/>
            <fraction n="0.000115" ref="H2"/>
        </element>
        <isotope N="14" Z="7" name="N14">
            <atom unit="g/mole" value="14.0031"/>
        </isotope>
        <isotope N="15" Z="7" name="N15">
            <atom unit="g/mole" value="15.0001"/>
        </isotope>
        <element name="Nitrogen">
            <fraction n="0.99632" ref="N14"/>
            <fraction n="0.00368" ref="N15"/>
        </element>
        <isotope N="16" Z="8" name="O16">
            <atom unit="g/mole" value="15.9949"/>
        </isotope>
        <isotope N="17" Z="8" name="O17">
            <atom unit="g/mole" value="16.9991"/>
        </isotope>
        <isotope N="18" Z="8" name="O18">
            <atom unit="g/mole" value="17.9992"/>
        </isotope>
        <element name="Oxygen">
            <fraction n="0.99757" ref="O16"/>
            <fraction n="0.00038" ref="O17"/>
            <fraction n="0.00205" ref="O18"/>
        </element>
        <isotope N="28" Z="14" name="Si28">
          <atom unit="g/mole" value="27.9769265350"/>
        </isotope>
        <isotope N="29" Z="14" name="Si29">
          <atom unit="g/mole" value="28.9764946653"/>
        </isotope>
        <isotope N="30" Z="14" name="Si30">
          <atom unit="g/mole" value="29.973770137"/>
        </isotope>
        <element name="Silicon">
            <fraction n="0.92223" ref="Si28"/>
            <fraction n="0.04685" ref="Si29"/>
            <fraction n="0.03092" ref="Si30"/>
        </element>

        <material name="Material_Galactic">
            <property name="RINDEX" ref="RINDEX_Galactic"/>
            <T unit="K" value="2.73"/>
            <D unit="kg/m3" value="1.0e-22"/>
            <fraction n="1.0" ref="Hydrogen"/>
        </material>
        <material name="Material_Air" state="gas">
            <property name="RINDEX" ref="RINDEX_Air"/>
            <T unit="K" value="293.15"/>
            <D unit="g/cm3" value="0.00129"/>
            <fraction n="0.7" ref="Nitrogen"/>
            <fraction n="0.3" ref="Oxygen"/>
        </material>
        <material name="Material_Water" state="solid">
            <property name="RINDEX" ref="RINDEX_Water"/>
            <property name="ABSLENGTH" ref="ABSLENGTH_Water"/>
            <T unit="K" value="293.15"/>
            <D unit="g/cm3" value="1"/>
            <fraction n="0.112097669256382" ref="Hydrogen"/>
            <fraction n="0.887902330743618" ref="Oxygen"/>
        </material>
        <material name="Material_Quartz" state="solid">
            <property name="RINDEX" ref="RINDEX_Quartz"/>
            <T unit="K" value="293.15"/>
            <D unit="g/cm3" value="2.65"/>
            <fraction n="0.4674294749105434" ref="Silicon"/>
            <fraction n="0.5325705250894566" ref="Oxygen"/>
        </material>
        <material name="Material_PMT" state="solid">
            <property name="RINDEX" ref="RINDEX_Quartz"/>
            <property name="ABSLENGTH" ref="ABSLENGTH_Quartz"/>
            <T unit="K" value="293.15"/>
            <D unit="g/cm3" value="2.65"/>
            <fraction n="0.4674294749105434" ref="Silicon"/>
            <fraction n="0.5325705250894566" ref="Oxygen"/>
        </material>

    </materials>

    <solids>
        <box name="SolidVolume_World" x="350" y="350" z="350" lunit="mm"/>
        <box name="SolidVolume_Air" x="300" y="300" z="300" lunit="mm"/>
        <box name="SolidVolume_CuvetteandLS" x="55" y="55" z="55" lunit="mm"/>
        <box name="SolidVolume_LS" x="50" y="50" z="50" lunit="mm"/>
        <box name="SolidVolume_CuvetteFace" x="55+0.02" y="55+0.02" z="2.5+0.02" lunit="mm"/>
        <subtraction name="SolidVolume_Cuvette">
           <first ref="SolidVolume_CuvetteandLS"/>
           <second ref="SolidVolume_LS"/>
        </subtraction>
        <subtraction name="SolidVolume_CuvetteMain">
           <first ref="SolidVolume_Cuvette"/>
           <second ref="SolidVolume_CuvetteFace"/>
           <position x="0" y="0" z="-26.25-0.01" unit="mm"/>
        </subtraction>
        <cone name="SolidVolume_PMT" rmin1="0" rmax1="30" rmin2="0" rmax2="30" z="2" startphi="0" deltaphi="360" lunit="mm" aunit="deg"/>
        <opticalsurface name="Property_Surface1" model="unified" finish="groundfrontpainted" type="dielectric_dielectric">
           <property name="REFLECTIVITY" ref="REFLECTIVITY_Surface1"/>
        </opticalsurface>
        <opticalsurface name="Property_Surface2" model="unified" finish="polishedfrontpainted" type="dielectric_dielectric" sigma_alpha="0.1">
           <property name="REFLECTIVITY" ref="REFLECTIVITY_Surface2"/>
        </opticalsurface>
        <opticalsurface name="Property_Surface3" model="unified" finish="polished" type="dielectric_dielectric">
           <property name="REFLECTIVITY" ref="REFLECTIVITY_Surface3"/>
        </opticalsurface>
        <opticalsurface name="Property_Surface4" model="unified" finish="polished" type="dielectric_dielectric">
           <property name="REFLECTIVITY" ref="REFLECTIVITY_Surface4"/>
        </opticalsurface>
    </solids>

    <structure>
        <volume name="LogicalVolume_LS">
            <materialref ref="Material_Water"/>
            <solidref ref="SolidVolume_LS"/>
        </volume>
        <volume name="LogicalVolume_CuvetteMain">
            <materialref ref="Material_Quartz"/>
            <solidref ref="SolidVolume_CuvetteMain"/>
        </volume>
        <volume name="LogicalVolume_CuvetteFace">
            <materialref ref="Material_Quartz"/>
            <solidref ref="SolidVolume_CuvetteFace"/>
        </volume>
        <volume name="LogicalVolume_PMT">
            <materialref ref="Material_Galactic"/>
            <solidref ref="SolidVolume_PMT"/>
        </volume>
        <volume name="LogicalVolume_Air">
            <materialref ref="Material_Air"/>
            <solidref ref="SolidVolume_Air"/>
            <physvol name="PhysicalVolume_CuvetteMain">
                <volumeref ref="LogicalVolume_CuvetteMain"/>
                <rotationref ref="RotateY90"/>
                <position x="0" y="0" z="72.5" unit="mm"/>
            </physvol>
            <physvol name="PhysicalVolume_CuvetteFace">
                <volumeref ref="LogicalVolume_CuvetteFace"/>
                <rotationref ref="RotateY90"/>
                <position x="26.25+0.01" y="0" z="72.5" unit="mm"/>
            </physvol>
            <physvol name="PhysicalVolume_LS">
              <volumeref ref="LogicalVolume_LS"/>
              <position x="0" y="0" z="72.5" unit="mm"/>
            </physvol>
            <physvol name="PhysicalVolume_PMT">
                <volumeref ref="LogicalVolume_PMT"/>
                <rotationref ref="RotateY90"/>
                <position x="38.5" y="0" z="72.5" unit="mm"/>
            </physvol>
        </volume>

        <volume name="Logical_World">
            <materialref ref="Material_Galactic"/>
            <solidref ref="SolidVolume_World"/>

            <physvol name="PhysicalVolume_Air">
                <volumeref ref="LogicalVolume_Air"/>
                <position x="0" y="0" z="0" unit="mm"/>
            </physvol>
        </volume>

       <bordersurface name="Surface_LStoCuvetteMain" surfaceproperty="Property_Surface1">
           <physvolref ref="PhysicalVolume_LS"/>
           <physvolref ref="PhysicalVolume_CuvetteMain"/>
       </bordersurface>
       <bordersurface name="Surface_CuvetteMaintoLS" surfaceproperty="Property_Surface2">
           <physvolref ref="PhysicalVolume_CuvetteMain"/>
           <physvolref ref="PhysicalVolume_LS"/>
       </bordersurface>
       <bordersurface name="Surface_LStoCuvetteFace" surfaceproperty="Property_Surface3">
           <physvolref ref="PhysicalVolume_LS"/>
           <physvolref ref="PhysicalVolume_CuvetteFace"/>
       </bordersurface>
       <bordersurface name="Surface_CuvetteFacetoLS" surfaceproperty="Property_Surface3">
           <physvolref ref="PhysicalVolume_CuvetteFace"/>
           <physvolref ref="PhysicalVolume_LS"/>
       </bordersurface>
       <bordersurface name="Surface_CuvetteMaintoAir" surfaceproperty="Property_Surface3">
           <physvolref ref="PhysicalVolume_CuvetteMain"/>
           <physvolref ref="PhysicalVolume_Air"/>
       </bordersurface>
       <bordersurface name="Surface_AirtoCuvetteMain" surfaceproperty="Property_Surface3">
           <physvolref ref="PhysicalVolume_Air"/>
           <physvolref ref="PhysicalVolume_CuvetteMain"/>
       </bordersurface>
       <bordersurface name="Surface_CuvetteFacetoAir" surfaceproperty="Property_Surface3">
           <physvolref ref="PhysicalVolume_CuvetteFace"/>
           <physvolref ref="PhysicalVolume_Air"/>
       </bordersurface>
       <bordersurface name="Surface_AirtoCuvetteFace" surfaceproperty="Property_Surface3">
           <physvolref ref="PhysicalVolume_Air"/>
           <physvolref ref="PhysicalVolume_CuvetteFace"/>
       </bordersurface>
       <bordersurface name="Surface_CuvetteMaintoCuvetteFace" surfaceproperty="Property_Surface4">
           <physvolref ref="PhysicalVolume_CuvetteMain"/>
           <physvolref ref="PhysicalVolume_CuvetteFace"/>
       </bordersurface>
       <bordersurface name="Surface_CuvetteFacetoCuvetteMain" surfaceproperty="Property_Surface4">
           <physvolref ref="PhysicalVolume_CuvetteFace"/>
           <physvolref ref="PhysicalVolume_CuvetteMain"/>
       </bordersurface>

    </structure>

    <setup name="Default" version="1.0">
        <world ref="Logical_World"/>
    </setup>

</gdml>

